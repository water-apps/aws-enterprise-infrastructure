# Copy this file to terraform.tfvars and update with your values

aws_region = "ap-southeast-2"

# Use + addressing for easy email management
# Gmail example: yourname+dev-waterapps@gmail.com
dev_account_email    = "your-email+dev@example.com"
prod_account_email   = "your-email+prod@example.com"
shared_account_email = "your-email+shared@example.com"

budget_alert_email  = "your-email@example.com"
monthly_budget_limit = "300"

common_tags = {
  Project     = "WaterApps"
  ManagedBy   = "Terraform"
  Owner       = "VK"
  Company     = "WaterApps"
  CostCenter  = "Engineering"
}
